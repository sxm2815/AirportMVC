@model IEnumerable<AirportMVC.Models.PassengerViewModel>

<style>
    body {
        background-color: #E1BBC9;
    }

    .btn-dark{
        margin-bottom:1em;
    }
</style>

@{
    ViewData["Title"] = "Index";
}

<h1>Passengers</h1>

<div class="text-center jumbotron">
    <h2>View All Passengers</h2>
    <a class="navbar-brand btn btn-dark" asp-area="" asp-controller="Passengers" asp-action="Create">Add Passenger</a>
    <table class="table">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Name)</td>
                <td>@Html.DisplayNameFor(model => model.Age)</td>
                <td>@Html.DisplayNameFor(model => model.Email)</td>
                <td>@Html.DisplayNameFor(model => model.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(model => model.ReservationNumber)</td>
                <td>@Html.DisplayNameFor(model => model.FlightNumber)</td>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pass in Model) {
            <tr>
                <td>@Html.DisplayFor(modelitem => pass.Name)</td>
                <td>@Html.DisplayFor(modelitem => pass.Age)</td>
                <td>@Html.DisplayFor(modelitem => pass.Email)</td>
                <td>@Html.DisplayFor(modelitem => pass.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelitem => pass.ReservationNumber)</td>
                <td>@Html.DisplayFor(modelitem => pass.FlightNumber)</td>
                <td>@Html.ActionLink("Details", "Details", new { id = pass.Id }, new { @class = "btn btn-primary" })</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = pass.Id }, new { @class = "btn btn-danger" })</td>
                <td>@Html.ActionLink("Assign", "Assign", new { id = pass.Id }, new { @class = "btn btn-success" })</td>
            </tr>
            }
        </tbody>
    </table>
</div>

